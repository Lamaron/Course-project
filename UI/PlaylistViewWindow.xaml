<Window x:Class="UI.PlaylistViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Просмотр плейлиста" Height="600" Width="800"
        Background="#1A1A1A"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="PlaylistNameText"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0 0 0 15"/>

        <DataGrid x:Name="TracksGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="TracksGrid_MouseDoubleClick"
                  Background="#1E1E1E"
                  Foreground="#D6D6D6"
                  RowBackground="#252525"
                  AlternatingRowBackground="#2E2E2E"
                  Margin="0 10 0 10"
                  RowHeight="60"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Width="48" Height="48" CornerRadius="6" Background="#333">
                                <Image Source="{Binding AudioFile.CoverImage,
                            Converter={StaticResource ByteArrayToImageConverter}}"
                           Stretch="UniformToFill"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Название"
                        Binding="{Binding AudioFile.Name}"
                        Width="2*"/>

                <DataGridTextColumn Header="Исполнитель"
                        Binding="{Binding AudioFile.Author}"
                        Width="*"/>

            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Foreground" Value="#D6D6D6"/>
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
        

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 10">

            <Button Content="⏮" Width="50" Height="40" Margin="5" Click="Prev_Click"/>
            <Button Content="▶"  Width="50" Height="40" Margin="5" Click="Play_Click"/>
            <Button Content="⏭" Width="50" Height="40" Margin="5" Click="Next_Click"/>

            <TextBlock Text="Громкость" Foreground="White" Margin="20 0 10 0" VerticalAlignment="Center"/>
            <Slider x:Name="VolumeSlider" Width="150" Minimum="0" Maximum="1" Value="0.5"
                    ValueChanged="VolumeSlider_ValueChanged"/>
            

        </StackPanel>

        <StackPanel Grid.Row="3" Margin="50 5 50 10">

            <Slider x:Name="TimelineSlider"
            Minimum="0"
            ValueChanged="TimelineSlider_ValueChanged"
            PreviewMouseDown="Timeline_PreviewMouseDown"
            PreviewMouseUp="Timeline_PreviewMouseUp"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="CurrentTimeText" Text="00:00"/>
                <TextBlock Text=" / "/>
                <TextBlock x:Name="TotalTimeText" Text="00:00"/>
            </StackPanel>

        </StackPanel>


        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Редактировать"
                    Width="150" Height="40"
                    Background="#FFCC00"
                    Foreground="Black"
                    Click="Edit_Click"/>

            <Button Content="Закрыть"
                    Width="120" Height="40"
                    Margin="10 0 0 0"
                    Click="Close_Click"/>
        </StackPanel>

    </Grid>
</Window>
