<Window x:Class="UI.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="360" Width="400"
        Background="{StaticResource BackgroundDarkBrush}">
    <Grid Margin="20">

        <TextBlock Text="Оплата Премиум"
                   FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <StackPanel>
            <TextBlock Text="Выберите тариф" Padding="0,30,0,0"/>
            <ComboBox x:Name="TariffComboBox" RenderTransformOrigin="0.499,1.406">
                <ComboBoxItem Content="Месячный"/>
                <ComboBoxItem Content="Годовой"/>
            </ComboBox>

            <TextBlock x:Name="AmountTextBlock" Margin="0,10"
                       FontSize="16" Foreground="White"/>

            <Button Content="Оплатить" Click="Pay_Click" Background="{StaticResource AccentBrush}"/>
            <Button Content="Отмена" Click="Cancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
