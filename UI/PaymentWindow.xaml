<Window x:Class="UI.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="520" Width="420"
        Background="{StaticResource BackgroundDarkBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Оплата Premium"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Имя" Foreground="#CCCCCC"/>
                    <TextBox x:Name="FirstNameTextBox"
                             Height="32"
                             Background="#2A2A2A"
                             Foreground="White"
                             BorderBrush="#444"
                             Padding="6"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Фамилия" Foreground="#CCCCCC"/>
                    <TextBox x:Name="LastNameTextBox"
                             Height="32"
                             Background="#2A2A2A"
                             Foreground="White"
                             BorderBrush="#444"
                             Padding="6"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Email" Foreground="#CCCCCC"/>
            <TextBox x:Name="EmailTextBox"
                     Height="32"
                     Background="#2A2A2A"
                     Foreground="White"
                     BorderBrush="#444"
                     Padding="6"/>

            <TextBlock Text="Тариф" Foreground="#CCCCCC"/>
            <ComboBox x:Name="TariffComboBox" Height="32">
                <ComboBox.Resources>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="6"/>
                    </Style>
                </ComboBox.Resources>

                <ComboBoxItem Content="Месячный"/>
                <ComboBoxItem Content="Годовой"/>
            </ComboBox>

            <TextBlock x:Name="AmountTextBlock"
                       FontSize="16"
                       Foreground="#FFCC00"
                       Margin="0,5,0,10"/>

            <TextBlock Text="Номер карты" Foreground="#CCCCCC"/>
            <TextBox x:Name="CardNumberTextBox"
                Height="32"
                Background="#2A2A2A"
                Foreground="White"
                BorderBrush="#444"
                Padding="6"
                MaxLength="19"
                TextChanged="CardNumberTextBox_TextChanged"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Срок действия (MM/YY)" Foreground="#CCCCCC"/>
                    <TextBox x:Name="ExpiryTextBox"
                             Height="32"
                             Background="#2A2A2A"
                             Foreground="White"
                             BorderBrush="#444"
                             Padding="6"
                             MaxLength="5"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="CVV" Foreground="#CCCCCC"/>
                    <PasswordBox x:Name="CvvBox"
                                 Height="32"
                                 Background="#2A2A2A"
                                 Foreground="White"
                                 BorderBrush="#444"
                                 Padding="6"
                                 MaxLength="3"/>
                </StackPanel>
            </Grid>

        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Оплатить"
                    Width="120"
                    Height="36"
                    Background="{StaticResource AccentBrush}"
                    Foreground="Black"
                    Margin="0,0,10,0"
                    Click="Pay_Click"/>

            <Button Content="Отмена"
                    Width="120"
                    Height="36"
                    Click="Cancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
