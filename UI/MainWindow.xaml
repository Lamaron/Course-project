<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Музыкальный плеер" Height="620" Width="950"
        Background="{StaticResource BackgroundDarkBrush}">
    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔍 Поисковая панель -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBox x:Name="SearchTextBox" Width="300" Height="32"
                     Text="Поиск..." />
            <Button Content="Поиск" Click="SearchButton_Click"/>
            <Button Content="Создать плейлист" Click="CreatePlaylist_Click"/>
            <Button Content="Библиотека" Click="OpenLibrary_Click"/>
            <Button Content="Премиум" Click="OpenPayment_Click"/>
        </StackPanel>

        <!-- 📄 Таблица треков -->
        <DataGrid x:Name="MainDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  Margin="0,10,0,10"
                  MouseDoubleClick="MainDataGrid_MouseDoubleClick">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Исполнитель" Binding="{Binding Author}" Width="*"/>
                <DataGridTextColumn Header="Альбом" Binding="{Binding Album.Name}" Width="*"/>
                <DataGridTextColumn Header="URL" Binding="{Binding URL}" Width="2*"/>
            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Foreground" Value="#D6D6D6"/>
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

        </DataGrid>

        <!-- ▶ Нижняя панель -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Content="⏮" Width="40" Click="PreviousButton_Click"/>
            <Button Content="⏯" Width="40" Click="PlayButton_Click"/>
            <Button Content="⏭" Width="40" Click="NextButton_Click"/>

            <TextBlock x:Name="NowPlayingText" Margin="20,0" VerticalAlignment="Center"
                       Foreground="White"/>

            <Slider x:Name="VolumeSlider"
                    Minimum="0" Maximum="1" Value="0.5" Width="150"
                    ValueChanged="VolumeSlider_ValueChanged"
                    Margin="20,0"/>

            <MediaElement x:Name="Player"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          Visibility="Collapsed" />
        </StackPanel>

    </Grid>
</Window>
