<Window x:Class="UI.PlaylistEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="PlaylistEditWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Название плейлиста" />
            <TextBox x:Name="PlaylistNameTextBox" />
            <TextBlock Text="Доступные треки" Margin="0,8,0,4" />
            <DataGrid x:Name="AvailableTracksDataGrid" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Исполнитель" Binding="{Binding Author}" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Добавить трек" Click="AddTrack_Click" Margin="0,8,0,0" />
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Треки в плейлисте" />
            <DataGrid x:Name="PlaylistTracksDataGrid" AutoGenerateColumns="False" Height="360">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding AudioFile.Name}" />
                    <DataGridTextColumn Header="Исполнитель" Binding="{Binding AudioFile.Author}" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Удалить трек" Click="RemoveTrack_Click" Margin="0,8,0,0" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <Button Content="Сохранить" Click="Save_Click" Margin="0,0,8,0" />
            <Button Content="Отмена" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>
