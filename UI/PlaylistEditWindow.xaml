<Window x:Class="UI.PlaylistEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Редактор плейлиста" Height="600" Width="850"
        Background="#1A1A1A"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Название плейлиста:" 
                       Foreground="#F2F2F2" 
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="PlaylistNameTextBox"
                     Width="350" Height="34"
                     Background="#2D2D2D"
                     Foreground="White"
                     FontSize="15"
                     BorderBrush="#444"
                     Padding="6"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Все треки"
                           FontSize="17"
                           FontWeight="Bold"
                           Foreground="#FFCC00"/>

                <DataGrid x:Name="AvailableTracksDataGrid"
                          Margin="0,10,10,0"
                          Background="#1E1E1E"
                          Foreground="#F2F2F2"
                          HeadersVisibility="Column"
                          RowBackground="#262626"
                          AlternatingRowBackground="#2F2F2F"
                          HorizontalGridLinesBrush="#3A3A3A"
                          VerticalGridLinesBrush="#3A3A3A"
                          BorderBrush="#333"
                          AutoGenerateColumns="False"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.ScrollUnit="Pixel"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="True"
                          BorderThickness="1" SelectionChanged="AvailableTracksDataGrid_SelectionChanged">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Foreground" Value="#F2F2F2"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Height" Value="32"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFCC00"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Исполнитель" Binding="{Binding Author}" Width="*"/>
                    </DataGrid.Columns>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Foreground" Value="#D6D6D6"/>
                            <Setter Property="Background" Value="#2A2A2A"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="14"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="➜"
                        Width="55" Height="45"
                        Background="#3A3A3A"
                        Foreground="White"
                        FontSize="22"
                        Click="AddTrack_Click"/>

                <Button Content="⬅"
                        Width="55" Height="45"
                        Margin="0,15,0,0"
                        Background="#3A3A3A"
                        Foreground="White"
                        FontSize="22"
                        Click="RemoveTrack_Click"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Треки плейлиста"
                           FontSize="17"
                           FontWeight="Bold"
                           Foreground="#FFCC00"/>

                <DataGrid x:Name="PlaylistTracksDataGrid"
                          Margin="10,10,0,0"
                          AutoGenerateColumns="False"
                          Background="#1E1E1E"
                          Foreground="#F2F2F2"
                          HeadersVisibility="Column"
                          RowBackground="#262626"
                          AlternatingRowBackground="#2F2F2F"
                          HorizontalGridLinesBrush="#3A3A3A"
                          VerticalGridLinesBrush="#3A3A3A"
                          BorderBrush="#333"
                          BorderThickness="1">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Foreground" Value="#F2F2F2"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Height" Value="32"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFCC00"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding AudioFile.Name}" Width="2*"/>
                        <DataGridTextColumn Header="Исполнитель" Binding="{Binding AudioFile.Author}" Width="*"/>
                    </DataGrid.Columns>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Foreground" Value="#D6D6D6"/>
                            <Setter Property="Background" Value="#2A2A2A"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="14"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Width="140" Height="38"
                    Content="Сохранить"
                    Background="#FFCC00"
                    Foreground="Black"
                    FontWeight="Bold"
                    Click="Save_Click"/>

            <Button Width="140" Height="38"
                    Content="Отмена"
                    Margin="10,0,0,0"
                    Background="#3A3A3A"
                    Foreground="White"
                    Click="Cancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
