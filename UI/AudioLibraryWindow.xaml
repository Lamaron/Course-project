<Window x:Class="UI.AudioLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="AudioLibraryWindow" Height="500" Width="800"
        Background="#1A1A1A"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Добавить папку" Click="ImportFolder_Click"
                    Background="#3A3A3A" Foreground="White" Padding="8" Margin="4"/>

            <Button Content="Редактировать трек" Click="EditTags_Click"
                    Background="#3A3A3A" Foreground="White" Padding="8" Margin="4"/>

            <Button Content="Удалить" Click="Delete_Click"
                    Background="#3A3A3A" Foreground="White" Padding="8" Margin="4"/>
        </StackPanel>

        <DataGrid x:Name="AudioFilesDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,10,0,0"
                  Background="#1E1E1E"
                  Foreground="#F2F2F2"
                  HeadersVisibility="Column"
                  BorderBrush="#333"
                  RowBackground="#262626"
                  AlternatingRowBackground="#2F2F2F"
                  HorizontalGridLinesBrush="#3A3A3A"
                  VerticalGridLinesBrush="#3A3A3A">

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Foreground" Value="#F2F2F2"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="Height" Value="34"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFCC00"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>


            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2D2D2D"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Height" Value="32"/>
                    <Setter Property="BorderBrush" Value="#444"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Исполнитель" Binding="{Binding Author}" Width="2*"/>
                <DataGridTextColumn Header="Альбом" Binding="{Binding Album.Name}" Width="2*"/>
                <DataGridTextColumn Header="URL" Binding="{Binding URL}" Width="3*"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Window>
